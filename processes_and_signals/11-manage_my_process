#!/usr/bin/env bash
# manage - Control script for manage_my_process

# Function to check if process is running
is_running() {
    if [ -f "/var/run/my_process.pid" ]; then
        local pid=$(cat /var/run/my_process.pid 2>/dev/null)
        if [ -n "$pid" ] && ps -p "$pid" > /dev/null 2>&1; then
            return 0  # Process is running
        fi
    fi
    return 1  # Process is not running
}

# Function to start the process
start_process() {
    # Check if already running
    if is_running; then
        echo "manage_my_process is already running"
        exit 1
    fi
    
    # Start the process in the background
    ./manage_my_process &
    local pid=$!
    
    # Save the PID to file
    echo $pid > /var/run/my_process.pid
    
    # Verify it started successfully
    sleep 0.5
    if ps -p $pid > /dev/null 2>&1; then
        echo "manage_my_process started"
    else
        echo "Failed to start manage_my_process"
        rm -f /var/run/my_process.pid
        exit 1
    fi
}

# Function to stop the process
stop_process() {
    if [ -f "/var/run/my_process.pid" ]; then
        local pid=$(cat /var/run/my_process.pid 2>/dev/null)
        
        # Check if the process exists
        if [ -n "$pid" ] && ps -p $pid > /dev/null 2>&1; then
            # Try to terminate gracefully
            kill $pid 2>/dev/null
            
            # Wait for process to terminate (up to 5 seconds)
            local count=0
            while [ $count -lt 5 ] && ps -p $pid > /dev/null 2>&1; do
                sleep 1
                count=$((count + 1))
            done
            
            # If still running, force kill
            if ps -p $pid > /dev/null 2>&1; then
                kill -9 $pid 2>/dev/null
            fi
        fi
        
        # Remove the PID file
        rm -f /var/run/my_process.pid
        echo "manage_my_process stopped"
    else
        echo "manage_my_process is not running"
    fi
}

# Main script logic
if [ "$#" -eq 1 ]; then
    case "$1" in
        start)
            start_process
            ;;
        stop)
            stop_process
            ;;
        restart)
            stop_process
            start_process
            echo "manage_my_process restarted"
            ;;
        *)
            echo "Usage: $0 {start|stop|restart}"
            exit 1
            ;;
    esac
else
    echo "Usage: $0 {start|stop|restart}"
    exit 1
fi

exit 0
